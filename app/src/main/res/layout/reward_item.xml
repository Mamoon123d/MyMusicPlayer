<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/qb_px_145"
    android:layout_height="@dimen/qb_px_200"
    android:layout_margin="@dimen/qb_px_20"

    android:background="@drawable/reward_shape">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bottom_con"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_69"
        android:scaleType="fitXY"
        android:layout_marginHorizontal="@dimen/qb_px_7"
        android:layout_marginBottom="@dimen/qb_px_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/reward_shape2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/titleIv"
        android:layout_width="@dimen/qb_px_100"
        android:layout_height="@dimen/qb_px_60"
        android:layout_marginTop="@dimen/qb_px_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/paytm_logo" />


    <TextView
        android:id="@+id/subtitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/qb_px_30"
        android:elevation="@dimen/x2"
        android:paddingHorizontal="@dimen/qb_px_4"
        android:text="Redeem for Cashback"
        android:textAlignment="center"
        android:textColor="@color/text_6"
        android:textSize="@dimen/sp12"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/titleTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/qb_px_35"
        android:elevation="@dimen/x2"
        android:text="Paytm"
        android:textColor="@color/text_3"
        android:textSize="@dimen/sp16"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_con"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/qb_px_6"
        android:layout_marginVertical="@dimen/qb_px_8"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/reward_shape3" />
</androidx.constraintlayout.widget.ConstraintLayout>