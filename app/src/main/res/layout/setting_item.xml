<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x6"
        android:paddingHorizontal="@dimen/qb_px_10"
        android:background="@drawable/selectable_item_background"
        android:paddingVertical="@dimen/qb_px_10">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/s_img"
            android:layout_width="@dimen/qb_px_30"
            android:layout_height="@dimen/qb_px_30"
            app:tint="@color/text_3"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_mobile" />

        <TextView
            android:id="@+id/s_title"
            android:layout_width="@dimen/x0"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/x10"
            android:text="General"
            android:textColor="@color/text_3"
            android:textSize="@dimen/sp16"
            android:layout_marginStart="@dimen/x10"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/appCompatImageView4"
            app:layout_constraintStart_toEndOf="@+id/s_img"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/s_subtitle"
            android:layout_width="@dimen/x0"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/x10"
            android:text="General"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/text_5"
            android:layout_marginStart="@dimen/x10"
            android:textSize="@dimen/sp14"
            app:layout_constraintEnd_toStartOf="@+id/appCompatImageView4"
            app:layout_constraintStart_toEndOf="@+id/s_img"
            app:layout_constraintTop_toBottomOf="@+id/s_title" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView4"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_right_small" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>