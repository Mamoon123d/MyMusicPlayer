<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:id = "@+id/llVip"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    android:layout_marginStart = "@dimen/qb_px_16"
    android:layout_marginTop = "@dimen/qb_px_14"
    android:layout_marginEnd = "@dimen/qb_px_16"
    android:layout_marginBottom = "@dimen/qb_px_8"
    android:background = "@drawable/bg_drawer_remove_ad"
    android:gravity = "center"
    android:orientation = "horizontal"
    android:paddingStart = "8dp"
    android:paddingTop = "12dp"
    android:paddingEnd = "8dp"
    android:paddingBottom = "12dp"
    android:visibility = "gone">
    <androidx.appcompat.widget.AppCompatImageView
        android:id = "@+id/icon"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:src = "@drawable/ic_remove_ad" />
    <TextView
        android:id = "@+id/text"
        android:layout_width = "0dp"
        android:layout_height = "match_parent"
        android:layout_marginStart = "32dp"
        android:layout_weight = "1"
        android:ellipsize = "end"
        android:gravity = "left|center_vertical|center_horizontal|center|start"
        android:maxLines = "1"
        android:text = "@string/remove_ads"
        android:textAlignment = "viewStart"
        android:textColor = "@color/drawer_remove_ad_text"
        android:textSize = "14sp"
        tools:ignore = "RtlHardcoded" />
    <TextView
        android:id = "@+id/price_text"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginEnd = "8dp"
        android:maxLines = "1"
        android:text = "$0.99"
        android:textAlignment = "viewStart"
        android:textColor = "@color/red_point"
        android:textSize = "14sp" />
    <ImageView
        android:id = "@+id/ivArrow"
        android:layout_width = "wrap_content"
        android:layout_height = "match_parent"
        android:rotationY = "@integer/angle_rtl_180"
        android:scaleType = "centerInside"
        android:src = "@drawable/ic_arrow_right_black"
        android:contentDescription = "@string/arrow_icon" />
</LinearLayout>
