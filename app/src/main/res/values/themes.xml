<resources xmlns:tools = "http://schemas.android.com/tools" xmlns:tool = "http://schemas.android.com/apk/res-auto">
  <!-- Base application theme. -->
    <style name = "Theme.MusicPlayer" parent = "Theme.MaterialComponents.DayNight.DarkActionBar">
      <!-- Primary brand color. -->
        <item name = "colorPrimary">@color/first_color</item>
      <item name = "colorPrimaryVariant">@color/second_color</item>
      <item name = "colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name = "colorSecondary">@color/first_color</item>
      <item name = "colorSecondaryVariant">@color/second_color</item>
      <item name = "colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name = "android:statusBarColor" tool:targetApi="l">?attr/colorPrimaryVariant</item>
      <item name="android:forceDarkAllowed" tool:targetApi="q" tools:targetApi = "q">false</item>
        <!-- Customize your theme here. -->
  </style>

  <style name = "text_heading" parent="Theme.MaterialComponents.DayNight">
    <item name = "android:textSize">16sp</item>
    <item name = "android:textColor">@color/black</item>
    <item name = "android:textStyle">bold</item>
  </style>

   <style name="circleImageView" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">50%</item>
  </style>

  <style name="roundFrame" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">6%</item>
  </style>
</resources>