<resources xmlns:tools = "http://schemas.android.com/tools" xmlns:tool = "http://schemas.android.com/apk/res-auto">
  <!-- Base application theme. -->
    <style name = "Theme.MusicPlayer" parent = "Theme.MaterialComponents.DayNight.DarkActionBar">
      <!-- Primary brand color. -->
        <item name = "colorPrimary">@color/first_color</item>
      <item name = "colorPrimaryVariant">@color/second_color</item>
      <item name = "colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name = "colorSecondary">@color/first_color</item>
      <item name = "colorSecondaryVariant">@color/second_color</item>
      <item name = "colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name = "android:statusBarColor" tool:targetApi="l">?attr/colorPrimaryVariant</item>
      <item name="android:forceDarkAllowed" tool:targetApi="q" tools:targetApi = "q">false</item>
        <!-- Customize your theme here. -->
  </style>

  <style name = "text_heading" parent="Theme.MaterialComponents.DayNight">
    <item name = "android:textSize">16sp</item>
    <item name = "android:textColor">@color/black</item>
    <item name = "android:textStyle">bold</item>
  </style>

  <style name="circleImageView" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">50%</item>
  </style>

  <style name="roundFrame" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">6%</item>
  </style>

  <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
    <!--<item name="android:fontFamily">@fonts/iransans_b</item>-->
    <item name="android:textSize">@dimen/sp12</item>
    <item name="android:textStyle">bold</item>
    <item name="textAllCaps">false</item>
  </style>

  <style name="CustomTabs" parent="Widget.Design.TabLayout">
    <item name="tabSelectedTextColor">@color/text_2</item>
    <item name="tabTextColor">@color/text_3</item>
    <item name="tabIndicatorColor">@color/text_2</item>
    <item name="tabGravity">fill</item>
    <item name="tabIndicatorHeight">2dp</item>
    <item name="android:tabStripEnabled">true</item>
    <item name="android:padding">0dp</item>
    <item name="tabMaxWidth">0dp</item>
    <item name="android:minHeight">@dimen/qb_px_30</item>
    <item name="tabTextAppearance">@style/tab_text</item>
  </style>

  <style name="Widget.MyApp.Chip" parent="Widget.MaterialComponents.Chip.Choice">
    <item name="chipBackgroundColor">@color/color_choice_chip_background_color</item>
    <!--<item name="chipStrokeColor">@color/color_choice_chip_strokecolor_selector</item>-->
    <item name="chipStrokeColor">@color/text_2</item>
    <item name="chipStrokeWidth">1dp</item>
    <!--<item name="android:textColor">@color/color_choice_chip_text_color</item>-->
    <item name="android:textColor">@color/text_3</item>
  </style>
<style name="EqChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
    <item name="chipBackgroundColor">@color/chip_background_color</item>
    <!--<item name="chipStrokeColor">@color/color_choice_chip_strokecolor_selector</item>-->
    <item name="chipStrokeColor">@color/chip_stroke_color</item>
    <item name="chipStrokeWidth">1dp</item>
    <!--<item name="android:textColor">@color/color_choice_chip_text_color</item>-->
    <item name="android:textColor">@color/chip_text_color</item>
  </style>

  <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

  </style>
  <style name="MyTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    // make status bar icons colour grey
    <item name="android:windowLightStatusBar">true</item>
    // override the notch area
    <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    // make status bar transparent
    <item name="android:windowTranslucentStatus">true</item>
    // make navigation are transparent
    <item name="android:windowTranslucentNavigation">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="windowActionBarOverlay">true</item>

  </style>

</resources>